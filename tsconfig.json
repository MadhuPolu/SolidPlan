{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "ui/types"
    ]
  },
  "include": [
    "ui/**/*.ts",
    "ui/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "ui/**/*.spec.ts",
    "ui/test/**/*.ts"
  ]
}
