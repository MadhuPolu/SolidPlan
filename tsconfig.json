{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./ui/*"
      ],
      "@/*": [
        "./ui/*"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/axios",
      "@nuxtjs/vuetify",
      "vuetify-dialog",
      "./ui/types/types/*.d.ts"
    ],
    "plugins": [
      {
        "name": "typescript-tslint-plugin"
      }
    ]
  },
  "include": [
    "./ui/**/*.ts",
    "./ui/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "./ui/**/*.spec.ts",
    "./ui/test/**/*.ts"
  ]
}
